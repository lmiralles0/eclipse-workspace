#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define LEN 1000

int main(void) {

	setbuf(stdout,NULL);
	char cadena[LEN];
	fflush(stdin);

	printf("Puede escribir %d caracteres", sizeof(cadena));
	printf("Escribe tu nombre\n");
    gets(cadena);
    printf("Nombre: %s", cadena);

	return EXIT_SUCCESS;
}
